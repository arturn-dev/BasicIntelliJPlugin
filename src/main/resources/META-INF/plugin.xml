<idea-plugin>
    <id>pl.zzpj.BasicIntelliJPlugin</id>
    <name>BasicIntelliJPlugin</name>
    <vendor email="none" url="none">ZZPJ</vendor>

    <description><![CDATA[
    Basic plugin for IntelliJ IDEA IDE.<br>
    <em>By: Artur Nowicki, Kacper Włodarczyk, Dawid Morka, Kamil Dębowski</em>
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action class="pl.zzpj.HelloAction" id="SayHello" text="Say Hello">
            <add-to-group group-id="ToolsMenu"/>
            <add-to-group group-id="WelcomeScreen.QuickStart"/>
        </action>
    </actions>
</idea-plugin>