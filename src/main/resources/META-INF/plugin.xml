<idea-plugin>
    <id>pl.zzpj.BasicIntelliJPlugin</id>
    <name>BasicIntelliJPlugin</name>
    <vendor email="none" url="none">ZZPJ</vendor>

    <description><![CDATA[
    Basic calculator plugin for IntelliJ IDEA IDE.<br>
    Calculator is available as a Tool Window anchored to the right side of the screen.<br>
    <em>By: Artur Nowicki, Kacper Włodarczyk, Dawid Morka, Kamil Dębowski</em>
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Calculator" anchor="right" secondary="false" factoryClass="pl.zzpj.CalculatorToolWindowFactory"/>
    </extensions>

    <actions>

    </actions>
</idea-plugin>